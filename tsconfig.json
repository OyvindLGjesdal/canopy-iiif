{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@/*": [
        "*"
      ],
      "@/app": [
        "app/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/pages/*": [
        "pages/*"
      ],
      "@/services/*": [
        "services/*"
      ],
      "@/styles/*": [
        "styles/*"
      ]
    },
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es5",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "*.ts",
    "*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
